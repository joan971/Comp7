{% extends 'base.html.twig' %}


{% block title %}Mon panier - The Store{% endblock %}


{% block content %}

<h1>Mon panier</h1><br>

<strong>Retrouvez l'ensemble de vos article.</strong>

{% if cart|length > 0 %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Produit</th>
      <th scope="col">Prix</th>
      <th scope="col">Quantité</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
  {% set total = null %}
  {% for product in cart %}
    
    <tr>
      <th>
      <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name}}" height="60px"> 
      {{ product.product.name }}<br> 
      </th>
      <td>{{ product.product.price /100}} €</td>
      <td>{{ product.quantity }}</td>
      <td>{{ (product.product.price * product.quantity) /100}} €</td>
      <td>
      <a href="{{ path('delete_to_cart', { 'id' : product.product.id }) }}">
      <img src="{{ asset('assets/img/delete.png')}}" alt="Supprimer mon produit" height="15px">
      </a>
      </td>
    </tr>
    {% set total = total + (product.product.price * product.quantity) %}
    {% endfor %}
  </tbody>
</table>
 <div class="text-right">
<b>Total de mon panier :  </b> {{ (total /100)}} €</div>
<div class="d-grid gap-2 col-6 mx-auto">
  <a href="{{ path('order') }}" class="btn btn-primary btn-block" type="button">Valider mon panier</a> 
   
 </div>
 {% else %}
    <hr>
    <p><b>Votre panier est vide.</b></p>
  {% endif %}  
{% endblock %}
