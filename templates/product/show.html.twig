{% extends 'base.html.twig' %}

{% block title %} {{ product.name}}- The Store {% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-4">
        <img src="/uploads/{{ product.illustration}}" alt="{{ product.name}}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
        <h3>{{ product.name}}</h3>
            <p>{{ product.subtitle}}</p>
            <span class="product-page-price">  {{ product.price /100}}€</span><hr>
            <p class="text-align">
            {{ product.description}}
            </p>
            <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-primary">Ajouter à mon panier</a>
       </div>
    </div>
    
    
{% endblock %}